generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  subtitle  String
  content   String
  img       String
  resume    String
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
  date      String
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @unique()
  password String
  posts    Post[]
}
